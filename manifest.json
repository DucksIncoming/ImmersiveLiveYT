{
    "manifest_version": 3,
    "name": "Immersive YTL",
    "description": "A more immersive and user-friendly YouTube Live experience.",
    "version": "1.0",
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
          "16": "icons/icon-16.png",
          "32": "icons/icon-32.png",
          "48": "icons/icon-48.png",
          "128": "icons/icon-128.png"
        }
      },
      "permissions": ["activeTab", "scripting"]
  }